/* packageBattle/components/circle/circle.wxss */
.circle-wrapper {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border: 2rpx solid #ddd;
}
.wrapper {
  width: 100rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  overflow: hidden;
}
.wrapper.left {
  left: 0;
}
.wrapper.right {
  right: 0;
}
.circle {
  width: 200rpx;
  height: 200rpx;
  border: 20rpx solid orange;
  border-radius: 50%;
  position: absolute;
  top: 0;
  transition: all 1s linear;
}
.left-circle {
  left: 0;
  border-left-color: #ccc;
  border-bottom-color: #ccc;
}
.right-circle {
  right: 0;
  border-top-color: #ccc;
  border-right-color: #ccc;
}
.count {
  position: absolute;
  top: 100rpx;
  left: 100rpx;
}